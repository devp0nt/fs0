{
  "name": "@devp0nt/fs0",
  "version": "0.1.0",
  "description": "A powerful file system utility library with TypeScript support, glob patterns, and advanced file operations",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "publish": "npm publish",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "biome check --write",
    "types": "tsc --noEmit --project tsconfig.build.json",
    "types:dev": "tsc --noEmit",
    "prepare": "husky",
    "preinstall": "bun --version || (echo 'Please install Bun: https://bun.sh' && exit 1)"
  },
  "keywords": [
    "filesystem",
    "fs",
    "file",
    "utility",
    "typescript",
    "glob",
    "path",
    "json",
    "dotenv",
    "jiti"
  ],
  "author": {
    "name": "devp0nt",
    "url": "https://github.com/devp0nt"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devp0nt/fs0.git"
  },
  "bugs": {
    "url": "https://github.com/devp0nt/fs0/issues"
  },
  "homepage": "https://github.com/devp0nt/fs0#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "comment-json": "^4.2.5",
    "dotenv": "^17.2.2",
    "find-up": "^7.0.0",
    "globby": "^14.1.0",
    "jiti": "^2.5.1",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "^1.2.22",
    "@types/lodash": "^4.17.0",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^20.0.0",
    "husky": "^9.1.7",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
