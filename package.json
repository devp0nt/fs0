{
  "name": "@devp0nt/fs0",
  "version": "1.0.9",
  "description": "File system helpers for libraries",
  "keywords": [
    "filesystem",
    "fs",
    "file",
    "utility",
    "typescript",
    "glob",
    "path",
    "json",
    "dotenv",
    "jiti",
    "exec",
    "ejs"
  ],
  "license": "MIT",
  "author": {
    "name": "Sergei Dmitriev",
    "url": "https://p0nt.dev"
  },
  "homepage": "https://github.com/devp0nt/fs0#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devp0nt/fs0.git"
  },
  "bugs": {
    "url": "https://github.com/devp0nt/fs0/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput --project tsconfig.build.json",
    "build": "tsup",
    "build:test:esm": "tsup --outDir dist-test/esm --tsconfig tsconfig.build.test.json --format esm src/**/*",
    "build:test:esm:watch": "bun run build:test:esm --watch",
    "build:test:cjs": "tsup --outDir dist-test/cjs --tsconfig tsconfig.build.test.json --format cjs src/**/*",
    "build:test:cjs:watch": "bun run build:test:cjs --watch",
    "build:test": "bun run build:test:esm && bun run build:test:cjs",
    "build:test:watch": "bun run build:test:esm:watch & bun run build:test:cjs:watch",
    "build:all": "bun run build && bun run build:test",
    "test": "bun test src",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:build:esm": "bun test dist-test/esm",
    "test:build:esm:watch": "bun test dist-test/esm --watch",
    "test:build:cjs": "bun test dist-test/cjs",
    "test:build:cjs:watch": "bun test dist-test/cjs --watch",
    "test:build": "bun run test:build:esm && bun run test:build:cjs",
    "test:build:watch": "bun run test:build:esm:watch & bun run test:build:cjs:watch",
    "test:all": "bun run test && bun run test:build",
    "test:all:watch": "bun run test:watch & bun run test:build:watch",
    "test:all:build": "bun run build:all && bun run test:all",
    "test:all:build:watch": "bun run build:all:watch & bun run test:all:watch",
    "lint": "biome check --write",
    "types:build": "tsc --noEmit --project tsconfig.build.json",
    "types:dev": "tsc --noEmit",
    "types": "bun run types:dev",
    "pack:dry": "npm pack --dry-run",
    "prepare": "husky"
  },
  "dependencies": {
    "comment-json": "^4.2.5",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "find-up": "^7.0.0",
    "globby": "^14.1.0",
    "is-glob": "^4.0.3",
    "jiti": "^2.5.1",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@types/bun": "^1.2.22",
    "@types/ejs": "^3.1.5",
    "@types/is-glob": "^4.0.4",
    "@types/lodash": "^4.17.0",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^20.0.0",
    "cross-env": "^10.0.0",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.8",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
